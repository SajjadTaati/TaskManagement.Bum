@model IEnumerable<TaskManager.Models.TaskItem>

<div class="container" dir="rtl">
    @if (TempData["LoginMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["LoginMessage"]
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>📋 لیست تسک‌ها</h2>
        <a asp-action="Create" class="btn btn-primary">➕ تسک جدید</a>
    </div>

    <table class="table table-bordered table-striped table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>عملیات</th>
                <th>عنوان</th>
                <th>توضیحات</th>
                <th>وضعیت تسک</th>
                <th>تاریخ ایجاد</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning btn-sm mb-1">✏️ ویرایش</a>
                        <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger btn-sm mb-1">🗑 حذف</a>
                    </td>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>
                        @if (task.IsCompleted)
                        {
                            <span class="badge bg-success">انجام شده</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">در حال انجام</span>
                        }
                    </td>
                    <td>@task.CreationDaye.ToString("yyyy/MM/dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>